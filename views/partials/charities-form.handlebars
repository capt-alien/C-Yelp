<!-- views/partials/CHARITIES-form.handlebars -->

<fieldset>
  <legend>Edit Donation</legend>

  <!-- TITLE -->
  <p>
    <label for="donation">Donation</label><br>
    <input id="donation" type="number" name="donation" required />

  </p>

  <!-- Charity name -->
  <p>
    <label for="charName">Name of Charity</label><br>
    <input id="charName" type="text" name="charName" required />
  </p>

  <!-- DESCRIPTION -->
  <p>
    <label for="description-text">Description</label><br>
    <textarea id="description-text" name="description" rows="10" required /></textarea>
  </p>
</fieldset>


</fieldset>
